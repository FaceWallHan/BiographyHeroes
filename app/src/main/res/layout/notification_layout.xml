<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:text="basic"
        android:id="@+id/basic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:text="collapsed"
        android:id="@+id/collapsed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:text="heads_up"
        android:id="@+id/heads_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
       <RadioGroup
        android:gravity="center"
        android:id="@+id/visibility_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:checkedButton="@+id/radio_button_public"
        android:layout_marginTop="20dp">

        <RadioButton
            android:id="@+id/radio_button_public"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/d"
            android:text="public" />

        <RadioButton
            android:id="@+id/radio_button_private"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/d"
            android:text="private" />

        <RadioButton
            android:id="@+id/radio_button_secret"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/d"
            android:text="secret" />

    </RadioGroup>

    <Button
        android:id="@+id/visibility_bt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Visibility" />
</LinearLayout>